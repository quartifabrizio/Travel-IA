@page
@model TravelGpt.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4 p-sm-5 text-center">
                    <h1 class="h3">Logout</h1>
                    <p class="mb-4">Sei sicuro di voler uscire?</p>
                    <form method="post">
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-primary px-4">Sì, esci</button>
                            <a href="/" class="btn btn-outline-secondary px-4">Annulla</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>