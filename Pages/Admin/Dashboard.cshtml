                        {
                            <div class="text-center p-5">
                                <div class="mb-3">
                                    <i class="fas fa-plane-slash text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <h5 class="text-muted mb-2">Nessun viaggio recente</h5>
                                <p class="text-muted mb-3">Non ci sono viaggi recenti da mostrare in questo momento.</p>
                                <a href="#" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    <i class="fas fa-plus me-1"></i> Crea nuovo viaggio
                                </a>
                            </div>
                        }
                    </div>
                    @*<div class="card-footer bg-white border-top-0 p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Mostrando @Model.RecentTrips.Count() viaggi recenti</span>
                            <a href="/Admin/TripManagement" class="btn btn-sm btn-link text-decoration-none">
                                Vedi tutti i viaggi <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>*@
                </div>
            </div>

            <div class="col-md-4">
